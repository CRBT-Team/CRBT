generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_DEV_URL")
}

model profiles {
  id                String    @id
  name              String?   @unique
  verified          Boolean?  @default(false)
  bio               String?
  purplets          Float     @default(0) @db.Real
  crbt_badges       String[]
  crbt_banner       String?
  crbt_accent_color String?
  url               String?
  location          String?
  pronouns          String?
  likes             String[]
  birthday          DateTime? @db.Timestamptz(6)
}

model reminders {
  id          BigInt   @id @default(autoincrement())
  expiration  DateTime @db.Timestamptz(6)
  user_id     String
  destination String
  reminder    String?
  url         String
}

model servers {
  id              String  @id
  voice_linker    Json?   @db.Json
  welcome_channel String?
  welcome_message Json?   @db.Json
  goodbye_channel String?
  goodbye_message Json?   @db.Json
}

model users {
  id             String  @id(map: "misc_pkey")
  hstreak        Int     @default(0) @db.SmallInt
  telemetry      Boolean @default(true)
  todolist       String[]
  past_usernames String[]
  past_avatars   String[] 
  job_type       Jobs?
  job_exp        Int     @default(0) @db.SmallInt
}

model polls {
  id          String   @id
  creator_id  String
  choices     String // in reality this is an array of array that's stringified because prisma doesn't allow me to have that :(
}

enum Jobs {
  FARMER
  CASHIER
  BAKER
  COOK
  DEVELOPER
  DOCTOR
  TEACHER
  ENGINEER
  POLICE_OFFICER
  FIREFIGHTER
  NURSE
  LAWYER
  MUSICIAN
  ATHLETE
  STREAMER
  ARTIST
  WRITER
  INFLUENCER
}