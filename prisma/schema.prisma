generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_DEV_URL")
}

model profiles {
  id                String   @id
  verified          Boolean? @default(false)
  crbt_banner       String?
  crbt_accent_color String?
  bio               String?
  purplets          Float    @db.Real
  name              String?  @unique
  crbt_badges       String[]
}

model reminders {
  id          BigInt   @id @default(autoincrement())
  expiration  DateTime @db.Timestamptz(6)
  user_id     String
  destination String
  reminder    String?
  url         String
}

model servers {
  id           String @id
  voice_linker Json?  @db.Json
}

model misc {
  id      String @id
  hstreak Int    @default(0) @db.SmallInt
}

model polls {
  id          String   @id
  creator_id  String
  choices     String
}